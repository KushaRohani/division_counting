// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

///— your existing enums —///
enum Sex {
  male
  female
  other
}

model Assignment {
  id            Int       @id @default(autoincrement())
  latinCounter  Int
  group         Int
  completed     Boolean   @default(false)
  abandoned     Boolean   @default(false)
  createdAt     DateTime  @default(now())
}

// Names table for storing participant names
model Name {
  id        Int      @id @default(autoincrement())
  name      String
  created_at DateTime @default(now())
  
  // Relation to experiment data
  experiments Experiment_data[]
}

// Main experiment data model
model Experiment_data {
  id               Int                  @id @default(autoincrement())
  name_id          Int
  age              Int
  sex              Sex
  accuracy         Float
  task_accuracy    Boolean[]
  task_ids         String[]
  total_time       Int                  
  per_task_time    Int[]
  created_at       DateTime             @default(now())
  
  // Relation to names table
  name             Name                 @relation(fields: [name_id], references: [id])
}

model Experiment_per_question {
  id              Int                   @id @default(autoincrement())
  question_id     Int
  user_id         Int
  result          Boolean
  time            Int
}
